<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Righteous&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
    <title>@ViewData["Title"] - CULTIVO HIDROPONICO</title>
</head>
<body>
    <div class="contenedor">
        <div class="MenuLateral">
            <div class="Imagen">
                <div class="foto">
                    <img src="~/images/planti.jpg" alt="Imagen de una Planta">
                </div>
            </div>
            <div class="Enlaces">
                <div class="Elemento">
                    <a asp-controller="Ambiente" asp-action="PaginaInicio">
                        <div class="Icono IconoCultivoHidroponico">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-home" width="40"
                                 height="40" viewBox="0 0 24 24" stroke-width="2" stroke="#000000" fill="none"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <polyline points="5 12 3 12 12 3 21 12 19 12" />
                                <path d="M5 12v7a2 2 0 0 0 2 2h10a2 2 0 0 0 2 -2v-7" />
                                <path d="M9 21v-6a2 2 0 0 1 2 -2h2a2 2 0 0 1 2 2v6" />
                            </svg>
                        </div>
                        <div class="Titulo TituloCultivoHidroponico">
                            <span>Cultivo Hidropónico</span>
                        </div>
                    </a>
                </div>
                <div class="Elemento">
                    <a asp-controller="Usuario" asp-action="IniciarSesion">
                        <div class="Icono IconoIniciarSesion">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-login" width="40"
                                 height="40" viewBox="0 0 24 24" stroke-width="2" stroke="#08A71C" fill="none"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <path d="M14 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2" />
                                <path d="M20 12h-13l3 -3m0 6l-3 -3" />
                            </svg>
                        </div>
                        <div class="Titulo TituloIniciarSesion">
                            <span>Iniciar Sesión</span>
                        </div>
                    </a>
                </div>
                <div class="Elemento">
                    <a asp-controller="Usuario" asp-action="VerUsuario">
                        <div class="Icono IconoVerUsuario">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-user" width="40"
                                 height="40" viewBox="0 0 24 24" stroke-width="2" stroke="#88E3E7" fill="none"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <circle cx="12" cy="7" r="4" />
                                <path d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2" />
                            </svg>
                        </div>
                        <div class="Titulo TituloVerUsuario">
                            <span>Mi información</span>
                        </div>
                    </a>
                </div>
                <div class="Elemento">
                    <a asp-controller="Planta" asp-action="VerPlantas">
                        <div class="Icono IconoVerPlanta">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-plant" width="40"
                                 height="40" viewBox="0 0 24 24" stroke-width="2" stroke="#2EFF00" fill="none"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <path d="M7 15h10v4a2 2 0 0 1 -2 2h-6a2 2 0 0 1 -2 -2v-4z" />
                                <path d="M12 9a6 6 0 0 0 -6 -6h-3v2a6 6 0 0 0 6 6h3" />
                                <path d="M12 11a6 6 0 0 1 6 -6h3v1a6 6 0 0 1 -6 6h-3" />
                                <line x1="12" y1="15" x2="12" y2="9" />
                            </svg>
                        </div>
                        <div class="Titulo TituloVerPlanta">
                            <span>Ver Plantas</span>
                        </div>
                    </a>
                </div>
                <div class="Elemento">
                    <a asp-controller="Sensor" asp-action="VerSensores">
                        <div class="Icono IconoVerSensor">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-plug" width="40"
                                 height="40" viewBox="0 0 24 24" stroke-width="2" stroke="#0013FF" fill="none"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <path d="M7 7h10v6a3 3 0 0 1 -3 3h-4a3 3 0 0 1 -3 -3v-6" />
                                <line x1="9" y1="3" x2="9" y2="7" />
                                <line x1="15" y1="3" x2="15" y2="7" />
                                <path d="M12 16v2a2 2 0 0 0 2 2h3" />
                            </svg>
                        </div>
                        <div class="Titulo TituloVerSensor">
                            <span>Ver Sensores</span>
                        </div>
                    </a>
                </div>
                <div class="Elemento">
                    <a asp-controller="Usuario" asp-action="CerrarSesion">
                        <div class="Icono IconoCerrarSesion">
                            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-logout" width="40"
                                 height="40" viewBox="0 0 24 24" stroke-width="2" stroke="#FF0000" fill="none"
                                 stroke-linecap="round" stroke-linejoin="round">
                                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                                <path d="M14 8v-2a2 2 0 0 0 -2 -2h-7a2 2 0 0 0 -2 2v12a2 2 0 0 0 2 2h7a2 2 0 0 0 2 -2v-2" />
                                <path d="M7 12h14l-3 -3m0 6l3 -3" />
                            </svg>
                        </div>
                        <div class="Titulo TituloCerrarSesion">
                            <span>Cerrar Sesión</span>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="Principal">
            @RenderBody()
        </div>
    </div>
</body>
</html>
